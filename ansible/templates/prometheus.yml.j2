global:
  scrape_interval: 15s
  evaluation_interval: 15s

scrape_configs:
  # Prometheus self-monitoring
  - job_name: 'prometheus'
    static_configs:
      - targets: ['localhost:9090']

  # Pixel Art Converter - Flask applications
  - job_name: 'pixel-art-converter'
    static_configs:
      - targets:
{% for host in groups['app_servers'] %}
          - '{{ hostvars[host]["ansible_host"] }}:{{ app_port }}'
{% endfor %}
    metrics_path: /metrics

